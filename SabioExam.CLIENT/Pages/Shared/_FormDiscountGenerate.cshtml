@using SabioExam.SHARED.Models
@model DiscountHubGenerateRequest

<form id="discount-generate" method="post" class="mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <span asp-validation-for="Count" class="text-danger"></span>
        <input asp-for="Count" class="form-control bg-dark text-white" placeholder="Count" />
    </div>
    <div class="form-group mt-2">
        <span asp-validation-for="Length" class="text-danger"></span>
        <input asp-for="Length" class="form-control bg-dark text-white" placeholder="Length" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create Codes" class="btn btn-primary mt-4" />
    </div>
</form>